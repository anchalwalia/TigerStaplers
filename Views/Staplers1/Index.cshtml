@model TigerStaplers.Models.StaplerSizeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <form asp-controller="Staplers1" asp-action="Index" method="get">
        <p>
            <select asp-for="StaplerSize" asp-items="Model.Size">
                <option value="">All</option>
            </select>
            Title: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].PinsIncluded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staplers[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staplers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinsIncluded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
